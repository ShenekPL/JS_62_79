<html lang="pl"><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">

<title> Przykład użycia pętli </title>
<script language="JavaScript">
 function okno_zamknij()
 {
 window.close()
 }
var l=prompt("Ile razy powtórzyć =","");
var m=parseFloat(l);
var a=prompt("podaj swoje inicjały =","");
for ( var i=1; i<=m; i++)
{
for ( var k=1; k<=i; k++)
{
document.write("&nbsp &nbsp &nbsp &nbsp &nbsp &nbsp &nbsp");
}
document.write(i+"_"+a+"_"+i+"<br>");
}
</script>
</head>
<body>
<input type="button" value="zamknij okno" onclick="okno_zamknij()">

</body></html>